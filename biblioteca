class Livro:
    def __init__ (self,ID,Título,Autor,Ano_de_publicação,Status):
        self.ID = ID
        self.Título = Título
        self.Autor = Autor
        self.Ano_de_publicação = Ano_de_publicação
        self.Status = Status
    def mudar_status(self,novo_status):
        self.Status = novo_status

class Métodos:
    def __init__ (self):
        self.livros_disponíveis = []
        self.livros_emprestados = []

    def Inserir (self,Livro):
        self.livros_disponíveis.append(Livro)
        print ('Livro adicionado!')

    def Listar (self):
        print ('Bem-Vindo a Biblioteca Digital !')
        print ('Livros disponiveís: ')
        for i, livros in enumerate(self.livros_disponíveis):
            print({i+1},' : ',self.livros_disponíveis)
        print('-----------------------------')
        print('Livros emprestados: ')
        for i,livros in enumerate (self.livros_emprestados):
            print({i+1},' : ',self.livros_emprestados)

    def Deletar (self,indice):
        if indice < len(self.livros_disponíveis):
            del self.livros_disponíveis[indice]
            print ('Livro removido !')
        else: 
            print ('Esse índice não existe')

    def Atualizar (self,indice,livro):
        if indice < len(self.livros_disponíveis):
            self.livros_disponíveis[indice] = livro
            print ('Lista atualizada !')
        else:
            print('Esse índice não existe')

    def Emprestar (self,livro):
        self.livros_disponíveis.remove(livro)
        self.livros_emprestados.append(livro)
        print ('Livro emprestado !')

    def Devolver (self,livro):
        self.livros_emprestados.remove(livro)
        self.livros_disponíveis.append(livro)
        
